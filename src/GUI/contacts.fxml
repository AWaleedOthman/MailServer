<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="451.0" prefWidth="602.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="GUI.Contacts">
    <children>
        <TableView fx:id="tv" layoutY="75.0" prefHeight="376.0" prefWidth="411.0">
            <columns>
                <TableColumn fx:id="tcName" editable="false" prefWidth="152.800048828125" resizable="false"
                             sortable="false" text="Name"/>
                <TableColumn fx:id="tcAddress" editable="false" minWidth="0.0" prefWidth="253.5999755859375"
                             resizable="false" sortable="false" text="Main Address"/>
            </columns>
        </TableView>
        <Button layoutX="487.0" layoutY="282.0" mnemonicParsing="false" onAction="#add" text="Add"/>
        <Button layoutX="481.0" layoutY="339.0" mnemonicParsing="false" onAction="#del" text="Delete"/>
        <TextField fx:id="searchField" layoutX="69.0" layoutY="25.0" onKeyTyped="#search" prefHeight="26.0"
                   prefWidth="185.0"/>
        <Label layoutX="14.0" layoutY="29.0" text="Search:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <ComboBox fx:id="searchCombo" layoutX="271.0" layoutY="24.0" onAction="#search" prefHeight="26.0"
                  prefWidth="136.0" promptText="by name/address">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="by name"/>
                    <String fx:value="by address"/>
                </FXCollections>
            </items>
        </ComboBox>
        <ComboBox fx:id="sortCombo" layoutX="439.0" layoutY="141.0" prefHeight="26.0" prefWidth="136.0"
                  promptText="by name/date">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="by name"/>
                    <String fx:value="by date added"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Label layoutX="439.0" layoutY="111.0" text="Sort by:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Button fx:id="sortBtn" layoutX="486.0" layoutY="184.0" mnemonicParsing="false" onAction="#sort" text="Sort!"/>
        <Hyperlink fx:id="back" layoutX="490.0" layoutY="400.0" onAction="#back" text="Back"/>
    </children>
</AnchorPane>
